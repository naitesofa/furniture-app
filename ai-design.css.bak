/* 处理状态和预览区样式 */
.processing-preview-container {
  position: relative;
  width: 100%;
  height: 200px;
  margin-bottom: 16px;
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-placeholder {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f8f9fa;
  z-index: 1;
}

.preview-gradient {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
  background: linear-gradient(135deg, rgba(42, 157, 143, 0.2) 0%, rgba(42, 157, 143, 0.5) 100%);
  transition: opacity 0.3s ease, background 0.3s ease;
}

.circular-progress-container {
  position: relative;
  z-index: 2;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80px;
  height: 80px;
}

.circular-progress {
  position: relative;
  width: 80px;
  height: 80px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.progress-ring {
  width: 80px;
  height: 80px;
  transform: rotate(-90deg);
}

.progress-ring-circle,
.progress-ring-circle-bg {
  stroke-width: 6px;
  fill: transparent;
  r: 34;
  cx: 40;
  cy: 40;
  transition: stroke-dashoffset 0.2s ease;
}

.progress-percentage {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 16px;
  font-weight: 600;
  color: var(--main-color);
}

.processing-status {
  text-align: center;
  margin-top: 12px;
}

.processing-text {
  font-size: 16px;
  font-weight: 500;
  color: #333;
  margin-bottom: 4px;
}

.processing-substatus {
  font-size: 14px;
  color: #666;
}

@media (prefers-color-scheme: dark) {
  .preview-placeholder {
    background-color: #292929;
  }
  
  .progress-ring-circle-bg {
    stroke: #444;
  }
  
  .processing-substatus {
    color: #aaa;
  }
} 