    background-color: #222;
    color: #eee;
  }
  
  .message-time {
    color: #888;
  }
  
  .result-description {
    color: #bbb;
  }
  
  .action-bar {
    background-color: #121212;
    border-top-color: #333;
  }
  
  .action-button.secondary {
    background-color: #333;
    color: #ddd;
  }
  
  .action-button.accent {
    background-color: #331a24;
    color: #ff80ab;
    border-color: #4d2533;
  }
  
